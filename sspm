case "$lang" in
fr_*)
printf "%1s\e[2mtouche [Entrer] simple pour 'oui'\e[0m\n\n"
      case $RANDOM in
          5*8* | 2*6* | *3*0*0* | 6*7*1* | *7*3*4 | 1*0*1* | *0*0 | *1*6* | *5*7* )
              read -p " Proc$(printf '\xc3\xa9')der $(printf '\xc3\xa0') l'installation ? (o/n) : " REP ;;        
