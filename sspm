                                                                       # Remove all remnant temporary files
                                                                       # left by a stoped build process and other...
                                                                       
                                                                       if [[ -n $CLEANUP && $CLEANUP == [yY] ]]; then [[ ! -d "$TMP" ]] && \
                                                                          case "$lang" in fr_*) printf "\e[91merreur: \e[0mimpossible \
                                                                          d'acc"$e_acute"der au r"$e_acute"pertoire temporaire\n";;tr_TR);;
                                                                          en_*|*) printf "\e[91merror: \e[0mUnable to access temp dir\n" ;;
                                                                          esac && exit 1; if [[ -n "$(find "$TMP" \( -name "*_build*" \
                                                                          -o -name "*_source*" -o -iname "*fakeroot*" -o -name "*tif*" \
                                                                          -o -name "*link*" -o -name "*msc*" -o -name "*extractdir*" \
                                                                          -o -name "*$BUILDFILE*" \) -writable -type f,l,d 2>/dev/null )" ]]
                                                                          then case "$lang" in fr_*) printf "Avertissement: cela effacera"
                                                                          printf "%1stous les fichiers concern"$e_acute"s\n%16sdans"
                                                                          printf "%1sle r"$e_acute"pertoire temporaire\n\n"
                                                                          read -p "Voulez-vous continuer ? (o/n) : " REP ;; tr_TR) ;; en_*|*) \
                                                                          printf "Warning: this will erase all affected files\n"
                                                                          printf "%10sin the temporary directory\n\n"
                                                                          read -p "Continue ? (y/n) : " REP ;; esac
                                                                          case $REP in  [yY]|[oO]|'') printf '\n' ;;  [nN]) \
                                                                          printf '\n' && exit ;;  *) printf '\n' && exit ;; esac
                                                                          if [[ "${EUID:-$(id -u)}" -eq 0 ]]; then find "$TMP" \
                                                                          \( -name '*_build*' -o -iname "*fakeroot*" -o -name '*tif*' \
                                                                          -o -name "*$BUILDFILE*" -o -name '*msc*' -o -name '*link*' \
                                                                          -o -name '*extractdir*' -o -name 'tst*' -o -name '*_source*' \) \
                                                                          -type f,l,d -print0 | xargs -0 rm -rf && case "$lang" in 
                                                                          fr_*) printf 'Fait\n\n' ;; tr_TR) ;; en_*|*) printf 'Done\n\n' ;;
                                                                           esac else find "$TMP" \( -name '*extractdir*' -o -iname "*fakeroot*" \
                                                                          -o -name '*_source*' -o -name "*$BUILDFILE*" -o -name '*msc*' -o -name '*link*' \
                                                                          -o -name 'tst*' -o -name '*_build*' -o -name '*tif*' \) -writable -type f,l,d \
                                                                          -print0 2>/dev/null | xargs -0 rm -rf && case "$lang" in fr_*) printf 'Fait\n\n' ;;
                                                                           tr_TR) ;; en_*|*) printf 'Done\n\n' ;; esac; fi; exit; else case "$lang" in fr_*)
                                                                           printf 'vide  \n' ;; tr_TR) ;; en_*|*) printf 'empty  \n' ;; esac; exit; fi; fi





if [[ -n "$PERM_STDOUT_MODE" ]]; then if [[ "$PERM_STDOUT_MODE" = "y" ]]; then if [[ "$DIALOG" = "off" ]]
then sed -i -e '0,/\(^DIALOG=.*\)/s/DIALOG=.*/DIALOG="on"/' "$SCRIPTFILE"; case "$lang" in fr_*) 
printf "\e[90mmessage de succ"$e_grave"s activ"$e_acute"\e[0m\n" ;; tr_TR) ;; en_*|*) 
printf "\e[90msuccess message enabled\e[0m\n" ;; esac; elif [[ "$DIALOG" = "on" ]]; then
sed -i -e '0,/\(^DIALOG=.*\)/s/DIALOG=.*/DIALOG="off"/' "$SCRIPTFILE"; case "$lang" in fr_*)
printf "\e[90mmessage de succ"$e_grave"s d"$e_acute"sactiv"$e_acute"\e[0m\n" ;;
tr_TR) ;; en_*|*) printf "\e[90msuccess message disabled\e[0m\n" ;; esac
elif [[ -z "$DIALOG" ]]; then sed -i -e '0,/\(^DIALOG=.*\)/s/DIALOG=.*/DIALOG="off"/' "$SCRIPTFILE";
case "$lang" in fr_*) printf "\e[90mmessage de succ"$e_grave"s d"$e_acute"sactiv"$e_acute"\e[0m\n" ;;
tr_TR) ;; en_*|*) printf "\e[90msuccess message disable\e[0m\n" ;; esac; fi fi fi
